<!doctype html>
<html>
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<script src="/jquery-1.5.1.min.js"></script>
		<script src="/dojo-ajax.js"></script>
    <link type="text/css" rel="stylesheet" href="/style.css"/>
	</head>
	<body>
    <div id="wrapper">
      <form method="POST" action="/">
      
        <span class="title">Dados do cliente</span>
        
        <div class="field">
          <label for="nome">Nome</label>
          <input name="nome" type="text" placeholder="Nome completo do cliente" required="required"/>
        </div>

        <div class="field">
          <label for="email">Email</label>
          <input name="email" type="email" placeholder="exemplo@dominio.com"/>
        </div>
        
        <div class="field">
          <label for="estado">Estado</label>
          <select name="estado" >
            <option value="" selected="selected">...</option>
            <option value="RS">Rio Grande do Sul</option>
            <option value="SC">Santa Catarina</option>					
            <option value="PR">Parana</option>					
          </select>  
        </div>

        <div class="field">
          <label for="cidade">Cidade</label>
          <select name="cidade">
            <option value="" selected="selected">...</option>
          </select>  
        </div>
        
        <div class="field">		
          <label for="CEP">CEP</label>
          <input name="cep" pattern="\d{5}-?\d{3}" placeholder="Ex.: 12345-123"/>
        </div>
        
        <div class="field">
          <label for="endereco">Logradouro</label><br/>
          <textarea name="endereco" rows="5" placeholder="Informe seu logradouro completo"></textarea>					
        </div>
        
        <div class="field">
          <button type="submit">Salvar</button>
        </div>
        
        <div style="clear:both;"></div>
      </form>
    </div>
	</body>
</html>